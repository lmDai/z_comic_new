<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.android.zhhr.ui.custom.DetailFloatLinearLayout
        android:id="@+id/ll_floatbottom"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_location"
            android:background="@drawable/btn_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            >
            <ImageView
                android:id="@+id/iv_location"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/btn_location"
                android:layout_width="15dp"
                android:layout_height="15dp"
                />
            <TextView
                android:textColor="@color/colorTextColor"
                android:layout_below="@id/iv_location"
                android:text="当前"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/rl_scroll"
            android:background="@drawable/btn_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            >
            <ImageView
                android:id="@+id/iv_scroll"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/btn_location"
                android:layout_width="15dp"
                android:layout_height="15dp"
                />
            <TextView
                android:textColor="@color/colorTextColor"
                android:layout_below="@id/iv_scroll"
                android:text="到底"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </com.android.zhhr.ui.custom.DetailFloatLinearLayout>
</RelativeLayout>