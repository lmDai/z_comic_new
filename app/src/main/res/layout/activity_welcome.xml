<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:id="@+id/rl_splash"
    android:background="#fefffd"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_centerVertical="true"
        android:src="@mipmap/welcome_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorTextColorLight"
        android:textSize="12dp"
        android:text="本程序仅供学习交流使用,严禁任何商业用途"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorTextColorLight2"
        android:textSize="10dp"
        android:text="code by zhr 2018/https://github.com/zhhr1122"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <include layout="@layout/layout_night_cover"></include>

</RelativeLayout>